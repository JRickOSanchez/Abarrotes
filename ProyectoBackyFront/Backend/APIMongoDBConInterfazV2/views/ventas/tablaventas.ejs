<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/ventas.css" />
    <title>Ventas</title>
</head>

<body>

    <header>
        <div class="header">
            <nav>
                <ul class="nav-links">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/ventas/tablaventas">Productos</a>
                    </li>
                </ul>
            </nav>
            <a type="button" class="px-3 btn btn-danger" href="/logout">Logout</a>
        </div>
    </header>
        <!-- Sección de Ventas -->
        <hr>
        <div class="col-12">
            <h2>Ventas</h2>
            <table class="table table-bordered" id="ventasTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha de Venta</th>
                        <th>Productos Vendidos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% ventas.forEach(venta => { %>
                        <tr>
                            <td><%= venta._id %></td>
                            <td><%= venta.cliente %></td>
                            <td><%= venta.fechaVenta %></td>
                            <td>
                                <ul>
                                    <% venta.productosVendidos.forEach(producto => { %>
                                        <li><strong>Producto:</strong> <%= producto.producto %>, <strong>Cantidad:</strong> <%= producto.cantidad %>, <strong>Precio Unitario:</strong> <%= producto.precioUnitario %></li>
                                    <% }); %>
                                </ul>
                            </td>
                            <td>
                                <button class="btn btn-warning" onclick="window.location.href='/ventas/editar/<%= venta._id %>'">Editar</button>
                                <button class="btn btn-danger" onclick="eliminarVenta('<%= venta._id %>')">Eliminar</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Script para eliminar productos y ventas (puedes adaptarlo según tus necesidades) -->
