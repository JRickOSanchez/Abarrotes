        function eliminarProducto(id) {
            // Lógica para eliminar producto
            console.log('Eliminar producto con ID:', id);
        }

        function eliminarVenta(id) {
            // Lógica para eliminar venta
            console.log('Eliminar venta con ID:', id);
        }
    </script>

</body>

</html>