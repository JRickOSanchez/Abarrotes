<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/categorias.css" />
    <title>Categorias</title>
</head>

<body>
    <header>
        <div class="header">
            <nav>
                <ul class="nav-links">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/categorias/tablacategorias">Categorias</a>
                    </li>
                </ul>
            </nav>
            <a type="button" class="px-3 btn btn-danger" href="/logout">Logout</a>
        </div>
    </header>

    <div class="container">
        <div class="mb-5">
            <form action="/categorias/tabla/agregar" method="POST">
                <div class="row">
                    <div class="form-group col-md-6 mb-3">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" class="form-control" id="nombre">
                    </div>
                    <div class="col-lg-12 mt-5">
                        <button class="btn btn-success" type="button" onclick="crearCategoria()">Crear</button>
                    </div>
                </div>
            </form>
        </div>
        <hr>
        <div class="col-12">
            <table class="table table-bordered" id="crudTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% categorias.forEach(categoria=> { %>
                        <tr>
                            <td>
                                <%= categoria._id %>
                            </td>
                            <td>
                                <%= categoria.nombre %>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/categorias/editarCategoria/<%= categoria._id %>">Editar</a>
                                <button class="btn btn-danger" onclick="eliminarCategoria('<%= categoria._id %>')">Eliminar</button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    </div>

    <!-- Script para eliminar categorías (puedes adaptarlo según tus necesidades) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        function eliminarCategoria(id) {
            // Utiliza SweetAlert para mostrar un mensaje de confirmación
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Una vez eliminado, no podrás recuperar esta categoría.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminarlo'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Realiza la solicitud DELETE al servidor
                    fetch(`categoria/eliminar/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Error al eliminar la categoría');
                            }
                            return response.json();
                        })
                        .then(data => {
                            // Muestra un mensaje de éxito
                            Swal.fire(
                                '¡Eliminado!',
                                'La categoría ha sido eliminada.',
                                'success'
                            ).then(() => {
                                // Puedes redirigir o realizar otras acciones después de eliminar la categoría
                                // En este caso, recargar la página
                                window.location.reload();
                            });
                        })
                        .catch(error => {
                            // Muestra un mensaje de error
                            Swal.fire(
                                'Error',
                                'Hubo un problema al eliminar la categoría. Inténtalo de nuevo.',
                                'error'
                            );
                            console.error('Error al eliminar la categoría:', error);
                        });
                }
            });
        }

        function crearCategoria() {
            // Obtén el valor del campo del formulario
            const nombre = document.getElementById('nombre').value;

            // Verifica que se ingrese el dato necesario (puedes agregar más validaciones según tus necesidades)
            if (!nombre) {
                // Muestra un mensaje de error si falta el dato
                Swal.fire(
                    'Error',
                    'Por favor, ingresa el nombre de la categoría.',
                    'error'
                );
                return;
            }

            // Simulación de una solicitud AJAX (reemplaza esto con tu lógica real)
            fetch('/categorias/tabla/agregar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    nombre: nombre,
                }),
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error en la creación de la categoría');
                    }
                    return response.json();
                })
                .then(data => {
                    // Muestra un mensaje de éxito
                    Swal.fire(
                        '¡Creada!',
                        'La categoría ha sido creada exitosamente.',
                        'success'
                    ).then(() => {
                        // Puedes redirigir o realizar otras acciones después de crear la categoría
                        // En este caso, recargar la página
                        window.location.reload();
                    });
                })
                .catch(error => {
                    // Muestra un mensaje de error
                    Swal.fire(
                        'Error',
                        'Hubo un problema al crear la categoría. Inténtalo de nuevo.',
                        'error'
                    );
                    console.error('Error al crear la categoría:', error);
                });
        }
    </script>

</body>

</html>